        // In Season Plan
        {
            "name": "In Season Plan",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "args": ["--debug", "--plan", "in_season"]
        },

        // Full Season Plan
        {
            "name": "Full Season Plan",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "args": ["--debug", "--plan", "full_season"]
        },

        // Full Season Plan - No Debug
        {
            "name": "Full Season Plan - No Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "args": ["--plan", "full_season"]
        },

        // Reset Plan
        {
            "name": "Reset Plan",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "args": ["--debug", "--plan", "reset"]
            // "args": ["--plan", "reset"]
        }
    ]
